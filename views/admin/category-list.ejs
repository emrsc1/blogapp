<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("../partials/head") %>
  </head>
  <body>
    <%- include("../partials/nav") %>

    <div class="container mt-3">
        <div class="row">
          <div class="col-md-12 mt-3">
           <% if (action!="undefined" && action=="edit") { %>
            <div class="alert alert-success">
             <%= categoryid %> İd'li Kategori Güncellendi.
            </div>
           <% } %>
            <% if (action!="undefined" && action=="delete") { %>
            <div class="alert alert-danger">
             <%= categoryid %> İd'li Kategori Silindi.
            </div>
           <% } %>
            <% if (action!="undefined" && action=="create") { %>
            <div class="alert alert-success">
             Kategori Eklendi.
            </div>
           <% } %>
              <table class="table table-bordered table-striped">
              <thead>
                <tr>
                  <th style="width: 50px;">id</th>
                  <th style="width: 150px;">name</th>
                  <th style="width: 130px;"></th>
                </tr>
              </thead>
              <tbody>
                <% categories.forEach(category => { %>
                 <tr>
                  <td><%= category.categoryid %></td>
                  <td>
                    <%= category.name %>
                  </td>
                  <td>
                    <a class="btn btn-sm btn-primary"href="/admin/categories/<%= category.categoryid %>">edit</a>
                    <a class="btn btn-sm btn-danger"href="/admin/categories/delete/<%= category.categoryid %>">delete</a>
                  </td>
                 </tr>
                <% }) %>
              </tbody>
              </table>
            
          </div>
        </div>
    </div>
  </body>
</html>
